<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/ivStairs"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_gravity="start"
        android:rotationX="180"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/stair"
        />

    <LinearLayout
        android:gravity="start"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cvLevelImage"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/level"
        />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cvLevelLock"
                android:layout_gravity="center"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/lock"
                />

        </FrameLayout>

        <TextView
            android:id="@+id/tvLevelName"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_one"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <TextView
            android:background="@drawable/coin"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"
            android:id="@+id/tvNumberofCoins"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="@string/hundred"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            />

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivDiamond"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/diamond"
            />


    </LinearLayout>

</LinearLayout>